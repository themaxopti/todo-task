{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "@wemake-services/typescript/recommended"
    ],
    "plugins": [
        "react",
        "jsx-a11y",
        "react-hooks",
    ],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "no-extra-semi": "off",
        "no-extra-parens": "off"
    }
}